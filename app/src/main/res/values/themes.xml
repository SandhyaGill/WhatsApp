<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.WhatsApp" parent="Theme.Material3.DayNight">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimaryContainer">@color/purple</item> <!-- floating action button background-->
        <item name="colorOnPrimaryContainer">@color/black</item> <!-- Color that will for icon on the floating action button-->
        <item name="colorSecondaryContainer">@color/white</item> <!-- Color that will be on the bottom navigation highlight-->
        <item name="colorOnSecondaryContainer">@color/purple</item> <!-- Color that will be on the bottom navigation highlighted item-->
        <item name="colorSecondary">@color/black</item>
        <item name="colorPrimary">@color/purple</item> <!-- used for status bar, buttons-->
        <item name="colorOnPrimary">@color/white</item> <!-- used for text used on primary color like button-->
        <item name="colorOnSurface">@color/purple</item>
    </style>

    <style name="Theme.WhatsApp" parent="Base.Theme.WhatsApp" />
    <style name="Circle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>